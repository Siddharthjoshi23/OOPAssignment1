// Write a program for calculating area, diagonal, and perimeter of rectangle
#include <iostream>
using namespace std;
#include <math.h>
int main(){
int l,b;
cout<<"Calculation of perimeter, area and diagonal of rectangle "<<endl;
cout<<"enter the length of rectangle "<<endl;
cin>>l;
cout<<"enter the breadth of rectangle "<<endl;
cin>>b;
int d = sqrt(b*b+l*l);
cout<<"the perimeter of a rectangle: "<<2*(l+b)<<endl;
cout<<"area of rectangle:"<<l*b<<endl;
cout<<"diagonal of rectangle:"<<d<<endl;
return 0;
}
