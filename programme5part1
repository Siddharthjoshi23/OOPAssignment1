//Write a program for Simple Interest 
// program for Simple Interest
#include<iostream>
using namespace std;

int main()
{
	int p,r,t,si;
	std::cout<<"Enter Principle Amount : ";
	std::cin>>p;
	std::cout<<"Enter interest Rate : ";
	std::cin>>r;
	std::cout<<"Enter Time (in years): ";
	std::cin>>t;
	si=(p*r*t)/100;
	std::cout<<"Simple interest is : "<<si;

	
	return 0;
}
